fun main() >> i32 {
    i32 x = 42;
    i32 y = 13;
    i32 z = 100;

    @printf("Welcome to Zlang!");
    @printf("First number: %d", x);
    @printf("Second number: %d", y);
    @printf("Third number: %d", z);

    @printf("Zlang compiler successfully parsed this code!");
    @printf("Variables declared: x=%d, y=%d, z=%d", x, y, z);

    @printf("This demonstrates:");
    @printf("1. Function definition with return type");
    @printf("2. Multiple variable declarations");
    @printf("3. Variable initialization");
    @printf("4. String literals");
    @printf("5. Number literals");
    @printf("6. Libc function calls with @ prefix");
    @printf("7. Multiple function arguments");
    @printf("8. Return statements");

    return x;
}
